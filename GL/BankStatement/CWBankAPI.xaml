<cw:ChildWindow
    xmlns:cw="clr-namespace:Uniconta.ClientTools;assembly=ClientTools"
        xmlns:UC="clr-namespace:UnicontaClient.Pages;assembly=UnicontaPages"
x:Class="UnicontaClient.Pages.CustomPage.CWBankAPI"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"          
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:ClientTools="clr-namespace:Uniconta.ClientTools;assembly=ClientTools"
           xmlns:ClientToolsControls="clr-namespace:Uniconta.ClientTools.Controls;assembly=ClientTools"
           xmlns:CorasauControls="clr-namespace:Uniconta.ClientTools.Controls;assembly=ClientTools"
           Width="400" Height="180"  KeyDown="ChildWindow_KeyDown" SizeToContent="WidthAndHeight">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="lblBankAPIFunction" Grid.Row="0" Text="{Binding Converter={StaticResource  GlobalLocalizationValueConverter},ConverterParameter=Type,Mode=OneWay}" Margin="5,0,0,0" Grid.Column="0"  VerticalAlignment="Center"/>
        <CorasauControls:ComboBoxEditor x:Name="cmbBankAPIFunction" Height="25" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Stretch" SelectedIndexChanged="BankAPIFunction_SelectedIndexChanged"/>
        <TextBlock x:Name="txtCustomerNo" Grid.Row="1" Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=CustomerNo}"  Margin="5,0,0,0" VerticalAlignment="Center"></TextBlock>
        <ClientToolsControls:TextEditor Width="200" Text="{Binding CustomerNo,Mode=TwoWay}" Height="25"  Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left"/>
        <TextBlock x:Name="lblBank" Grid.Row="2" Text="{Binding Converter={StaticResource  GlobalLocalizationValueConverter},ConverterParameter=FinancialInstitution,Mode=OneWay}" Margin="5,0,0,0" Grid.Column="0"  VerticalAlignment="Center"/>
        <CorasauControls:ComboBoxEditor x:Name="cmbBank" Height="25" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Stretch"/>
        <TextBlock x:Name="lblActivationCode" Grid.Row="3" Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=ActivationCode}"  Margin="5,0,0,0" VerticalAlignment="Center"></TextBlock>
        <ClientToolsControls:TextEditor x:Name="txtActivationCode" Width="200" Text="{Binding ActivationCode,Mode=TwoWay}" Height="25"  Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left"/>

        <StackPanel x:Name="actionButton" HorizontalAlignment="Right" Grid.Row="4"  Grid.ColumnSpan="2" Grid.Column="2" Orientation="Horizontal" Margin="0 10 0 0" >
            <Button x:Name="OKButton" IsDefault="True" Content="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=OK}" Click="OKButton_Click" MinWidth="75" Height="23" 
                    HorizontalAlignment="Right" Margin="0 0 3 0"  />
            <Button x:Name="CancelButton" IsCancel="True" Content="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=Cancel}" Click="CancelButton_Click" MinWidth="75" 
                    Height="23" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</cw:ChildWindow>